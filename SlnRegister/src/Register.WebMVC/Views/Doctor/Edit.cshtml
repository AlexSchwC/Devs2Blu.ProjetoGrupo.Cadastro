@using Register.Domain.DTO
@model DoctorDTO

<form asp-controller="Doctor" asp-action="Edit" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="form-group">
                    <input asp-for="id" type="hidden" class="form-control" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="personId" class="form-control" asp-items="ViewBag.personId">
                </div>

                <div class="form-group">
                    <label asp-for="specialtyId" for="specialtyId" class="color-label">Especialidade Médica:</label>
                    <select asp-for="specialtyId" class="form-control" asp-items="ViewBag.specialtyId"></select>
                    <span asp-validation-for="specialtyId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="crm" for="crm" class="color-label">CRM:</label>
                    <input asp-for="crm" class="form-control">
                    <span asp-validation-for="crm" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="cnpj" for="cnpj" class="color-label">CNPJ:</label>
                    <input asp-for="cnpj" class="form-control">
                    <span asp-validation-for="cnpj" class="text-danger"></span>
                </div>
                <div class="buttons-edit-create form-group mt-3">
                    <input type="submit" class="btn btn-warning w-100 btn-block" value="Editar">
                    <a class="btn btn-dark btn-block w-100 mt-3" asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</form>