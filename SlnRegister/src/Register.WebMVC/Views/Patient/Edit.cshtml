@using Register.Domain.DTO
@model PatientDTO

<form asp-controller="Patient" asp-action="Edit" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="form-group">
                    <input asp-for="id" type="hidden" class="form-control" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="personId" class="form-control" asp-items="ViewBag.personId">
                </div>

                <div class="form-group">
                    <label asp-for="conditionId" for="conditionId" class="color-label">Situação:</label>
                    <select asp-for="conditionId" class="form-control" asp-items="ViewBag.conditionId"></select>
                    <span asp-validation-for="conditionId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="mrNumber" for="mrNumber" class="color-label">MRNumber: </label>
                    <input asp-for="mrNumber" class="form-control">
                    <span asp-validation-for="mrNumber" class="text-danger"></span>
                </div>

                <div class="buttons-edit-create form-group mt-3">
                    <input type="submit" class="btn btn-warning w-100 btn-block" value="Editar">
                    <a class="btn btn-dark btn-block w-100 mt-3" asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</form>